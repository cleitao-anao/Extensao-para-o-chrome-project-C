{
    "manifest_version": 3,
    "name": "project C",
    "version": "2.0",
    "description": "Reduz a emissão de carbono bloqueando imagens e vídeos.",
    "permissions": [
    "activeTab", 
    "storage", 
    "declarativeNetRequest",
    "scripting"
    
    ],
    
     "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
      }
    },
    "icons": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    },
    "host_permissions": [
      "<all_urls>"
    ],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }
  